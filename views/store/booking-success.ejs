<%- include('../partials/head') %>
<body class="bg-light">
<%- include('../partials/nav') %>

<main class="container d-flex justify-content-center py-5">
  <div class="card border-0 shadow-lg rounded-4 overflow-hidden" style="max-width: 800px; width: 100%;">
    
    <div class="bg-success text-white p-4 text-center">
        <div class="mb-2">
            <svg viewBox="0 0 32 32" width="64" height="64" fill="currentColor"><path d="M16 2C8.2 2 2 8.2 2 16s6.2 14 14 14 14-6.2 14-14S23.8 2 16 2zm-2 20l-6-6 1.4-1.4 4.6 4.6 10.6-10.6 1.4 1.4-12 12z"></path></svg>
        </div>
        <h2 class="fw-bold">Booking Confirmed!</h2>
        <p class="mb-0">You are all set for <%= booking.homeName %></p>
    </div>

    <div class="row g-0">
        <div class="col-md-8 p-5 bg-white">
            <h5 class="text-muted text-uppercase small fw-bold mb-4">Boarding Pass Details</h5>
            
            <div class="row mb-4">
                <div class="col-6">
                    <small class="text-muted">Check-in</small>
                    <div class="fs-4 fw-bold"><%= booking.checkIn.toDateString() %></div>
                    <div class="small text-muted">12:00 PM</div>
                </div>
                <div class="col-6">
                    <small class="text-muted">Check-out</small>
                    <div class="fs-4 fw-bold"><%= booking.checkOut.toDateString() %></div>
                    <div class="small text-muted">11:00 AM</div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-6">
                    <small class="text-muted">Guests</small>
                    <div class="fs-5 fw-bold">
                        <%= booking.guests.adults + booking.guests.children + booking.guests.seniors %> Guests
                    </div>
                    <div class="small text-muted">
                        <%= booking.guests.adults %> Adults, <%= booking.guests.children %> Kids
                    </div>
                </div>
                <div class="col-6">
                    <small class="text-muted">Booking Reference</small>
                    <div class="fs-5 fw-bold font-monospace"><%= booking._id.toString().slice(-8).toUpperCase() %></div>
                </div>
            </div>

            <div class="border-top pt-4 mt-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <small class="text-muted">Total Paid</small>
                        <div class="fs-3 fw-bold text-success">â‚¹<%= booking.totalPrice %></div>
                    </div>
                    <a href="/bookings" class="btn btn-outline-dark rounded-pill">View All Trips</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 bg-light p-5 d-flex align-items-center justify-content-center border-start">
            <div class="text-center">
                <img src="https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=<%= booking._id %>" alt="QR Code" class="mb-3 mix-blend-multiply">
                <div class="small text-muted">Scan at check-in</div>
            </div>
        </div>
    </div>

  </div>
</main>

</body>
</html>