<%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/nav') %>

  <main class="container mt-4">
    <h1>My Favourites</h1>
    <div class="row mt-4">
      <% if (favouriteHomes.length > 0) { %>
        <% for (let home of favouriteHomes) { %>
          <div class="col-md-4 mb-4">
            <div class="card h-100">
              <img src="<%= home.photoUrl %>" class="card-img-top" alt="<%= home.houseName %>">
              <div class="card-body">
                <h5 class="card-title"><%= home.houseName %></h5>
                <p class="card-text"><%= home.location %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <a href="/homes/<%= home._id %>" class="btn btn-primary">View</a>
                  
                  <form action="/favourites/delete" method="POST">
                    <input type="hidden" name="homeId" value="<%= home._id %>">
                    <button type="submit" class="btn btn-danger">Remove</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% } %>
      <% } else { %>
        <div class="text-center w-100">
          <h3>No favourites added yet.</h3>
        </div>
      <% } %>
    </div>
  </main>
</body>
</html>