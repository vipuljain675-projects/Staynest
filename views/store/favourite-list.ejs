<%- include('../partials/head') %>
<body>
<%- include('../partials/nav') %>

<main class="container mt-4">
  <h2 class="mb-4">My Favourites</h2>

  <div class="row">
    <% if (favouriteHomes.length > 0) { %>
      <% favouriteHomes.forEach(home => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <img src="<%= home.photoUrl[0] %>"
                 class="card-img-top"
                 style="height:200px; object-fit:cover;">

            <div class="card-body">
              <h5><%= home.houseName %></h5>
              <p class="text-muted"><%= home.location %></p>

              <div class="d-flex justify-content-between">
                <a href="/homes/<%= home._id %>" class="btn btn-primary btn-sm">
                  View
                </a>

                <form action="/favourite-list/remove" method="POST">
                  <input type="hidden" name="homeId" value="<%= home._id %>">
                  <button class="btn btn-danger btn-sm">Remove</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p>No favourites yet.</p>
    <% } %>
  </div>
</main>

</body>
</html>
