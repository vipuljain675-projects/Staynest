<%- include('../partials/head') %>
<body>
<% locals.isHomeIndex = true %>
<%- include('../partials/nav') %>

<section class="hero-section">
  
  <div class="hero-glass-card">
    <h1 class="hero-title">
      Find your next <br> adventure
    </h1>
    <p class="text-muted mb-4" style="font-size: 1.1rem;">
      Discover homes, cabins, and unique stays around the world.
    </p>

    <form action="/search" method="GET">
      <div class="big-search-bar">
        <div class="ps-3 pe-2 text-start flex-grow-1 border-end">
          <label class="d-block small fw-bold text-dark" style="font-size: 0.75rem;">Where</label>
          <input
            type="text"
            name="q"
            class="big-search-input p-0"
            placeholder="Search destinations"
            required
            style="font-size: 0.95rem;"
          />
        </div>
        
        <div class="d-none d-md-block px-3 border-end text-start" style="min-width: 120px; opacity: 0.6;">
          <div class="small fw-bold text-dark" style="font-size: 0.75rem;">Check in</div>
          <div style="font-size: 0.9rem;">Add dates</div>
        </div>
        
        <div class="d-none d-md-block px-3 text-start" style="min-width: 120px; opacity: 0.6;">
           <div class="small fw-bold text-dark" style="font-size: 0.75rem;">Who</div>
           <div style="font-size: 0.9rem;">Add guests</div>
        </div>

        <button type="submit" class="big-search-btn">
          <svg viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg" style="display: block; fill: none; height: 16px; width: 16px; stroke: currentcolor; stroke-width: 4; overflow: visible;"><g fill="none"><path d="m13 24c6.0751322 0 11-4.9248678 11-11 0-6.07513225-4.9248678-11-11-11-6.07513225 0-11 4.92486775-11 11 0 6.0751322 4.92486775 11 11 11zm8-3 9 9"></path></g></svg>
        </button>
      </div>
    </form>
  </div>

</section>

</body>
</html>