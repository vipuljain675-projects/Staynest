<%- include('../partials/head') %>
<body>
<%- include('../partials/nav') %>

<main class="container mt-4">
  <h2 class="mb-4">
    <%= isSearch ? "Search Results" : "Explore Homes" %>
  </h2>

  <div class="row">
    <% if (homes.length > 0) { %>
      <% homes.forEach(home => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm">
            <img src="<%= home.photoUrl[0] %>" 
                 class="card-img-top"
                 style="height:200px; object-fit:cover;">

            <div class="card-body">
              <h5 class="fw-bold"><%= home.houseName %></h5>
             <p class="text-muted mb-1"><%= home.location %></p>

<div class="d-flex align-items-center gap-1 mb-1">
  <span class="fw-semibold">⭐ <%= home.rating.toFixed(1) %></span>
</div>

<p class="mb-2">₹<%= home.price %> / night</p>

              <div class="d-flex justify-content-between">
                <a href="/homes/<%= home._id %>" class="btn btn-outline-primary btn-sm">
                  View
                </a>

                <form action="/favourite" method="POST">
                  <input type="hidden" name="homeId" value="<%= home._id %>">
                  <button class="btn btn-outline-danger btn-sm">
                    ♥
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p>No homes found.</p>
    <% } %>
  </div>
</main>

</body>
</html>
