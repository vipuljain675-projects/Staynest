<%- include('../partials/head') %>
<body class="bg-white">
<%- include('../partials/nav') %>

<main class="container-fluid px-4 px-md-5" style="margin-top: 180px;">
  
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-4 g-3 mb-5">
    <% homes.forEach(home => { %>
        <div class="col">
            <div class="card h-100 border-0 bg-transparent group-card">
                
                <div class="position-relative rounded-4 overflow-hidden">
                    <a href="/homes/<%= home._id %>" class="d-block">
                        <img src="<%= home.photoUrl[0] %>" 
                             class="w-100 object-fit-cover" 
                             alt="<%= home.houseName %>" 
                             style="aspect-ratio: 1/0.95;"> </a>

                    <div class="position-absolute top-0 end-0 p-3" style="z-index: 10;">
                        <form action="/favourite-list" method="POST">
                            <input type="hidden" name="homeId" value="<%= home._id %>">
                            <button class="btn p-0 border-0 bg-transparent hover-scale">
                                <svg viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg" 
                                     aria-hidden="true" role="presentation" focusable="false" 
                                     style="display: block; fill: rgba(0, 0, 0, 0.5); height: 24px; width: 24px; stroke: white; stroke-width: 2; overflow: visible;">
                                    <path d="M16 28c-2.801 0-5.343-1.272-8.149-4.436C5.372 20.768 3.018 16.963 3.018 12.623 3.018 7.318 6.694 3 11.5 3c2.466 0 4.673 1.153 6.162 2.996C19.163 4.153 21.37 3 23.836 3c4.806 0 8.482 4.318 8.482 9.623 0 4.34-2.354 8.145-4.833 10.941C24.657 26.728 22.115 28 16 28z"></path>
                                </svg>
                            </button>
                        </form>
                    </div>
                </div>
                
                <a href="/homes/<%= home._id %>" class="text-decoration-none text-dark">
                    <div class="mt-2">
                        
                        <div class="d-flex justify-content-between align-items-start">
                            <h6 class="fw-bold mb-0 text-truncate pe-2" style="font-size: 15px; line-height: 19px;"><%= home.location %></h6>
                            
                            <div class="d-flex align-items-center gap-1">
                                <i class="bi bi-star-fill text-dark" style="font-size: 12px;"></i>
                                <span style="font-size: 15px;"><%= home.rating %></span>
                            </div>
                        </div>
                        
                        <div class="mt-1" style="font-size: 15px; color: #717171; line-height: 19px;">
                            <div class="text-truncate">Hosted by <%= home.houseName %></div>
                            <div>Nov 15 - 20</div>
                        </div>

                        <div class="mt-2" style="font-size: 15px; line-height: 19px;">
                            <span class="fw-bold">â‚¹<%= home.price %></span> night
                        </div>

                    </div>
                </a>

            </div>
        </div>
    <% }) %>
  </div>

</main>

<style>
    .group-card { cursor: pointer; }
    .hover-scale:hover { transform: scale(1.1); transition: transform 0.2s; }
    .hover-scale:active { transform: scale(0.9); }
    /* Font smoothing for that crisp look */
    body { -webkit-font-smoothing: antialiased; }
</style>

</body>
</html>