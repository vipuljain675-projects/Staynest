<%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/nav') %>

  <main class="container mt-5">
    <h1 class="mb-5 text-center fw-bold">My Trips</h1>
    
    <% if (bookings.length > 0) { %>
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <% for (let booking of bookings) { %>
            <div class="boarding-pass d-flex mb-4 shadow-sm" style="border: 1px solid #ddd; border-radius: 16px; overflow: hidden; background: white;">
              
              <div class="p-4 flex-grow-1 position-relative" style="border-right: 2px dashed #ccc;">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <h3 class="fw-bold text-primary mb-0"><%= booking.homeName %></h3>
                  <span class="badge bg-success">CONFIRMED</span>
                </div>
                
                <div class="row mt-4">
                  <div class="col-md-4 col-6 mb-2">
                    <small class="text-muted text-uppercase" style="font-size: 0.8rem;">Check-In</small>
                    <p class="fw-bold fs-5 mb-0"><%= booking.startDate %></p>
                  </div>
                  <div class="col-md-4 col-6 mb-2">
                    <small class="text-muted text-uppercase" style="font-size: 0.8rem;">Check-Out</small>
                    <p class="fw-bold fs-5 mb-0"><%= booking.endDate %></p>
                  </div>
                  <div class="col-md-4 col-12">
                    <small class="text-muted text-uppercase" style="font-size: 0.8rem;">Total Paid</small>
                    <p class="fw-bold fs-4 text-dark mb-0">₹<%= booking.totalPrice %></p>
                  </div>
                </div>

                <div style="position: absolute; top: -10px; right: -10px; width: 20px; height: 20px; background: white; border-radius: 50%; border: 1px solid #ddd; border-top: none; border-right: none;"></div>
                <div style="position: absolute; bottom: -10px; right: -10px; width: 20px; height: 20px; background: white; border-radius: 50%; border: 1px solid #ddd; border-bottom: none; border-right: none;"></div>
              </div>

              <div class="p-4 bg-light d-flex flex-column align-items-center justify-content-center" style="width: 140px;">
                <i class="bi bi-qr-code-scan fs-1 text-muted mb-3"></i>
                <form action="/bookings/delete" method="POST" class="w-100">
                  <input type="hidden" name="bookingId" value="<%= booking._id %>">
                  <button type="submit" class="btn btn-outline-danger btn-sm w-100">Cancel</button>
                </form>
              </div>
            </div>
            <% } %>
        </div>
      </div>
    <% } else { %>
      <div class="text-center mt-5 pt-5">
        <div class="display-1 text-muted mb-3">✈️</div>
        <h2 class="text-muted fw-bold">No trips booked yet!</h2>
        <a href="/homes" class="btn btn-dark btn-lg px-5 py-3 rounded-pill shadow mt-3">Start Exploring</a>
      </div>
    <% } %>
  </main>
</body>
</html>