<%- include('../partials/head') %>
<body class="bg-light">
<%- include('../partials/nav') %>

<main class="container mt-4">
  <h2 class="fw-bold mb-4">My Bookings</h2>

  <% bookings.forEach(b => { %>

    <div class="boarding-pass">
      <div class="pass-left">

        <div class="mb-2">
          <span class="pass-label">Stay</span>
          <div class="pass-value"><%= b.homeName %></div>
        </div>

        <div class="mb-2">
          <span class="pass-label">Check In</span>
          <div class="pass-value"><%= b.checkIn %></div>
        </div>

        <div class="mb-2">
          <span class="pass-label">Check Out</span>
          <div class="pass-value"><%= b.checkOut %></div>
        </div>

        <div class="mt-3">
          <span class="pass-label">Total</span>
          <div class="pass-value">â‚¹<%= b.totalPrice %></div>
        </div>

      </div>

      <div class="pass-right">
        <form action="/bookings/delete" method="POST">
          <input type="hidden" name="bookingId" value="<%= b._id %>">
          <button class="btn btn-outline-danger btn-sm">
            Cancel
          </button>
        </form>
      </div>
    </div>

  <% }) %>
</main>
</body>
</html>
