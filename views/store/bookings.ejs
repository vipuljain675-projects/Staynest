<%- include('../partials/head') %>
<body>
  <%- include('../partials/nav') %>

  <main class="container mt-5">
    <h1 class="mb-4">My Bookings</h1>
    
    <% if (bookings.length > 0) { %>
      <% for (let booking of bookings) { %>
        <div class="card mb-3 p-3 shadow-sm">
          <h3><%= booking.homeName %></h3>
          <p class="text-muted">
            Check In: <strong><%= booking.startDate %></strong> <br>
            Check Out: <strong><%= booking.endDate %></strong>
          </p>
          <p>Total Price: <strong>â‚¹<%= booking.totalPrice %></strong></p>
          
          <form action="/bookings/delete" method="POST">
             <input type="hidden" name="bookingId" value="<%= booking._id %>">
             <button class="btn btn-danger btn-sm">Cancel Booking</button>
          </form>
        </div>
      <% } %>
    <% } else { %>
      <h3>No bookings found.</h3>
      <a href="/homes" class="btn btn-primary">Go to Homes</a>
    <% } %>
  </main>
</body>
</html>