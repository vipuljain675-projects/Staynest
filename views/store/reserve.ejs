<%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/nav') %>

  <main class="container mt-5">
    <div class="row">
      <div class="col-md-7">
        <div class="mb-4">
          <a href="/homes/<%= home._id %>" class="text-dark text-decoration-none">
            <i class="bi bi-chevron-left small"></i> Back
          </a>
          <h2 class="fw-bold mt-2">Confirm and pay</h2>
        </div>

        <div class="card p-4 border rounded-4 shadow-sm">
          <h4 class="mb-3">Your trip</h4>
          <form action="/bookings" method="POST">
            <input type="hidden" name="homeId" value="<%= home._id %>">
            <input type="hidden" name="homeName" value="<%= home.houseName %>">
            <input type="hidden" name="pricePerNight" value="<%= home.price %>">

            <div class="row mb-3">
              <div class="col-md-6">
                <label class="form-label fw-bold small">CHECK-IN</label>
                <input type="date" name="checkIn" class="form-control p-3" required>
              </div>
              <div class="col-md-6">
                <label class="form-label fw-bold small">CHECK-OUT</label>
                <input type="date" name="checkOut" class="form-control p-3" required>
              </div>
            </div>

            <div class="mb-3">
              <label class="form-label fw-bold small">GUESTS</label>
              <input type="number" name="guests" class="form-control p-3" value="1" min="1" required>
            </div>

            <hr class="my-4">
            
            <h4 class="mb-3">Contact Info</h4>
            <div class="row mb-3">
              <div class="col-md-6">
                <input type="text" name="firstName" class="form-control p-3 mb-3" placeholder="First Name" required>
              </div>
              <div class="col-md-6">
                <input type="text" name="lastName" class="form-control p-3 mb-3" placeholder="Last Name" required>
              </div>
            </div>
            <input type="tel" name="phone" class="form-control p-3 mb-3" placeholder="Phone Number" required>
            <input type="email" name="email" class="form-control p-3 mb-3" placeholder="Email Address" required>

            <button type="submit" class="btn btn-primary btn-lg w-100 mt-3 py-3 fw-bold">
              Confirm and Pay
            </button>
          </form>
        </div>
      </div>

      <div class="col-md-5 ps-md-5 mt-4 mt-md-0">
        <div class="card p-4 border rounded-4 shadow-sm sticky-top" style="top: 100px;">
          <div class="d-flex mb-3 border-bottom pb-3">
            <img src="<%= home.photoUrl %>" class="rounded me-3" width="100" height="100" style="object-fit: cover;">
            <div>
              <p class="text-muted small mb-1">Entire home</p>
              <h5 class="fw-bold mb-1"><%= home.houseName %></h5>
              <p class="small">⭐ <%= home.rating %> (Superhost)</p>
            </div>
          </div>
          
          <h4 class="fw-bold">Price details</h4>
          <div class="d-flex justify-content-between mt-3">
            <span class="text-decoration-underline">₹<%= home.price %> x 1 night</span>
            <span>₹<%= home.price %></span>
          </div>
          <div class="d-flex justify-content-between mt-2">
            <span class="text-decoration-underline">Cleaning fee</span>
            <span>₹0</span>
          </div>
          <div class="d-flex justify-content-between mt-3 pt-3 border-top fw-bold fs-5">
            <span>Total (INR)</span>
            <span>₹<%= home.price %></span>
          </div>
        </div>
      </div>
    </div>
  </main>
</body>
</html>