<%- include('../partials/head') %>
<body class="bg-white">
<%- include('../partials/nav') %>

<main class="container my-5">
  <div class="row">
    <div class="col-md-7">
      <h2 class="fw-bold mb-4">Request to book</h2>
      
      <div class="py-4 border-bottom">
        <h4 class="fw-bold">Your Trip</h4>
        <div class="d-flex justify-content-between mt-3">
            <strong>Dates</strong>
            <span><%= checkIn %> – <%= checkOut %></span>
        </div>
        <div class="d-flex justify-content-between mt-2">
            <strong>Guests</strong>
            <span>1 Guest</span>
        </div>
      </div>

      <div class="py-4">
        <form action="/bookings" method="POST">
            <input type="hidden" name="homeId" value="<%= home._id %>">
            <input type="hidden" name="checkIn" value="<%= checkIn %>">
            <input type="hidden" name="checkOut" value="<%= checkOut %>">

            <button class="btn btn-primary btn-lg w-100 rounded-3 py-3 fw-bold" 
                    style="background: #ff385c; border: none;">
                Confirm and Pay
            </button>
        </form>
      </div>
    </div>

    <div class="col-md-5 ps-md-5">
      <div class="card p-4 border rounded-4 shadow-sm">
        <div class="d-flex gap-3 mb-3 border-bottom pb-3">
            <img src="<%= home.photoUrl[0] %>" class="rounded-3" width="100" height="100" style="object-fit: cover;">
            <div>
                <div class="small text-muted">Entire home</div>
                <div class="fw-bold"><%= home.houseName %></div>
                <div class="small">★ <%= home.rating %></div>
            </div>
        </div>
        
        <h4 class="fw-bold">Price details</h4>
        <div class="d-flex justify-content-between mt-3">
            <span class="text-decoration-underline">₹<%= home.price %> x Nights</span>
            <span>(Calculated at checkout)</span>
        </div>
      </div>
    </div>
  </div>
</main>
</body>
</html>