<!DOCTYPE html>
<html lang="en">
<%- include("partials/head", { title: "Airbnb Home" }) %>

<body>
  <%- include("partials/nav", { active: "home" }) %>

  <main>
    <h2>Here are our registered homes:</h2>

    <% if (registeredHomes.length === 0) { %>
      <p>No homes registered yet.</p>
    <% } else { %>
      <div class="home-grid">

        <% registeredHomes.forEach(home => { %>
          <div class="home-card">

            <img src="<%= home.image %>" alt="Home Image">

            <div class="home-info">
              <h3><%= home.name %></h3>
              <p class="location"><%= home.location %></p>

              <p class="price">â‚¹<%= home.price %> / night</p>

              <p class="rating">â­ <%= home.rating %></p>
            </div>

          </div>
        <% }) %>

      </div>
    <% } %>
  </main>

</body>
</html>
