<%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/nav') %>

  <main class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow border-0 rounded-4">
          <div class="card-header bg-white border-0 pt-4 px-4">
            <h2 class="fw-bold text-center mb-0">
              <%= editing ? "Edit your Home" : "List a new Home" %>
            </h2>
          </div>
          
          <div class="card-body p-4">
            <form action="/host/<%= editing ? 'edit-home' : 'add-home' %>" method="POST">
              
              <div class="row mb-3">
                <div class="col-md-8">
                  <label class="form-label fw-bold">Property Name</label>
                  <input type="text" name="houseName" class="form-control p-3" 
                         value="<%= editing ? home.houseName : '' %>" placeholder="e.g. Seaside Villa" required>
                </div>
                <div class="col-md-4">
                  <label class="form-label fw-bold">Price per Night</label>
                  <div class="input-group">
                    <span class="input-group-text">â‚¹</span>
                    <input type="number" name="price" class="form-control p-3" 
                           value="<%= editing ? home.price : '' %>" placeholder="4500" required>
                  </div>
                </div>
              </div>

              <div class="row mb-3">
                <div class="col-md-8">
                  <label class="form-label fw-bold">Location</label>
                  <input type="text" name="location" class="form-control p-3" 
                         value="<%= editing ? home.location : '' %>" placeholder="e.g. Goa, India" required>
                </div>
                <div class="col-md-4">
                  <label class="form-label fw-bold">Rating (0-5)</label>
                  <input type="number" name="rating" class="form-control p-3" step="0.1" min="0" max="5" 
                         value="<%= editing ? home.rating : '' %>" placeholder="4.5" required>
                </div>
              </div>

              <div class="mb-3">
                <label class="form-label fw-bold">Photo URL</label>
                <input type="text" name="photoUrl" class="form-control p-3" 
                       value="<%= editing ? home.photoUrl : '' %>" placeholder="https://..." required>
              </div>

              <div class="mb-4">
                <label class="form-label fw-bold">Description</label>
                <textarea name="description" class="form-control p-3" rows="4" 
                          placeholder="Tell us about your home..."><%= editing ? home.description : '' %></textarea>
              </div>

              <% if (editing) { %>
                <input type="hidden" name="id" value="<%= home._id %>">
              <% } %>

              <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg fw-bold py-3">
                  <%= editing ? "Update Home" : "Add Listing" %>
                </button>
              </div>

            </form>
          </div>
        </div>
      </div>
    </div>
  </main>
</body>
</html>