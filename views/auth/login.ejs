<%- include('../partials/head') %>
<body class="bg-white">
<%- include('../partials/nav') %>

<main class="container-fluid p-0">
  <div class="row g-0" style="min-height: calc(100vh - 80px);"> <div class="col-lg-6 d-none d-lg-block position-relative">
      <img 
        src="https://images.unsplash.com/photo-1512917774080-9991f1c4c750?q=80&w=2070&auto=format&fit=crop" 
        alt="Login Background" 
        class="w-100 h-100 object-fit-cover"
        style="position: absolute; top: 0; left: 0;"
      >
      <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(to bottom, rgba(0,0,0,0.1), rgba(0,0,0,0.3));"></div>
    </div>

    <div class="col-lg-6 d-flex align-items-center justify-content-center bg-white">
      <div class="w-100 p-5" style="max-width: 500px;">
        
        <div class="text-start mb-5">
          <h1 class="fw-bold mb-2" style="font-size: 2rem;">Welcome back</h1>
          <p class="text-muted">Login to manage your account.</p>
        </div>

        <form action="/login" method="POST">
          
          <div class="form-floating mb-3">
            <input 
              type="email" 
              name="email" 
              class="form-control rounded-3 border-secondary-subtle" 
              id="floatingInput" 
              placeholder="name@example.com" 
              required
              style="border-color: #b0b0b0;"
            >
            <label for="floatingInput" class="text-muted">Email address</label>
          </div>

          <div class="form-floating mb-4">
            <input 
              type="password" 
              name="password" 
              class="form-control rounded-3 border-secondary-subtle" 
              id="floatingPassword" 
              placeholder="Password" 
              required
              style="border-color: #b0b0b0;"
            >
            <label for="floatingPassword" class="text-muted">Password</label>
          </div>

          <button class="btn btn-primary w-100 py-3 fw-bold rounded-3 mb-4" 
                  style="background-color: #ff385c; border: none; font-size: 1.1rem; transition: transform 0.1s;">
            Log in
          </button>

          <div class="d-flex align-items-center mb-4">
            <hr class="flex-grow-1 text-muted">
            <span class="mx-3 text-muted small">or</span>
            <hr class="flex-grow-1 text-muted">
          </div>

          <div class="text-center">
            <span class="text-muted">Don't have an account?</span>
            <a href="/signup" class="fw-bold text-dark text-decoration-underline ms-1">Sign up</a>
          </div>

        </form>
      </div>
    </div>

  </div>
</main>

</body>
</html>